
@page "/Posts/{PostSlug}"
    @if(Post != null)
{
   <MudCard>
        <MudCardHeader>
            <MudText Typo="Typo.h3">@Post.Title</MudText>
            <MudDivider />
            @Post.CreatedAt
        </MudCardHeader>

        <MudCardContent>
        
                <BlogServerSide.Components.MarkDownViewer Content=@Post.Content></BlogServerSide.Components.MarkDownViewer>
               
      

        </MudCardContent>
    </MudCard> 
}




